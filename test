import { useState } from "react";

const questions = [
  {
    question: "日本の首都はどこですか？",
    options: ["大阪", "東京", "名古屋", "札幌"],
    answer: 1,
  },
  {
    question: "富士山の標高は？",
    options: ["2,776m", "3,776m", "4,776m", "1,776m"],
    answer: 1,
  },
  {
    question: "日本の国鳥は？",
    options: ["キジ", "ツル", "ハト", "スズメ"],
    answer: 0,
  },
  {
    question: "日本の一番長い川は？",
    options: ["信濃川", "利根川", "木曽川", "天竜川"],
    answer: 0,
  },
  {
    question: "日本の一番大きい湖は？",
    options: ["琵琶湖", "霞ヶ浦", "サロマ湖", "猪苗代湖"],
    answer: 0,
  },
  {
    question: "日本の一番高い山は？",
    options: ["北岳", "富士山", "槍ヶ岳", "奥穂高岳"],
    answer: 1,
  },
  {
    question: "日本の通貨単位は？",
    options: ["ドル", "ユーロ", "円", "ウォン"],
    answer: 2,
  },
  {
    question: "日本の最北端の都道府県は？",
    options: ["北海道", "青森県", "秋田県", "岩手県"],
    answer: 0,
  },
  {
    question: "日本の国花は？",
    options: ["桜", "梅", "菊", "椿"],
    answer: 0,
  },
  {
    question: "日本の総理大臣の任期は？",
    options: ["2年", "4年", "6年", "決まっていない"],
    answer: 3,
  },
];

export default function Home() {
  const [current, setCurrent] = useState(0);
  const [score, setScore] = useState(0);
  const [showResult, setShowResult] = useState(false);

  const handleAnswer = (idx) => {
    if (idx === questions[current].answer) setScore(score + 1);
    if (current + 1 < questions.length) {
      setCurrent(current + 1);
    } else {
      setShowResult(true);
    }
  };

  return (
    <div style={{ maxWidth: 500, margin: "50px auto", fontFamily: "sans-serif" }}>
      <h1>日本クイズ</h1>
      {showResult ? (
        <div>
          <h2>結果</h2>
          <p>
            {score} / {questions.length} 問正解！
          </p>
        </div>
      ) : (
        <div>
          <h2>
            問{current + 1}: {questions[current].question}
          </h2>
          <ul style={{ listStyle: "none", padding: 0 }}>
            {questions[current].options.map((opt, idx) => (
              <li key={idx} style={{ margin: "8px 0" }}>
                <button
                  style={{
                    width: "100%",
                    padding: "10px",
                    fontSize: "1em",
                    cursor: "pointer",
                  }}
                  onClick={() => handleAnswer(idx)}
                >
                  {opt}
                </button>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  );
}
